<%- include('partials/head.ejs') %>

<link rel="stylesheet" href="/css/questsStyles.css">

<body>
<main>
    <div id="headingContainer">
        <div id="navigationContainer">
            <form action="/home">
                <button id="homeBtn">Home</button>
            </form>
            <form action="/quests">
                <button id="questsBtn">Back to Quests</button>
            </form>
        </div>

        <h1>GameQuest Tracker</h1>

        <!-- Logout -->
        <form action="/logout">
            <button id="logoutBtn">Logout</button>
        </form>
    </div>

    <h2>Create New Quest</h2>

    <!-- Create Quest Form -->
    <div id="createQuestForm" class="quest-form">
        <form action="/quest/create" method="POST">
            <!-- Game Selection (SELECT dropdown) -->
            <label for="gameId">Game:</label>
            <select id="gameId" name="gameId" required>
                <option value="">-- Select a Game --</option>
            </select>

            <!-- Quest Name (TEXT input) -->
            <label for="questName">Quest Name:</label>
            <input type="text" id="questName" name="questName" maxlength="100" required>

            <!-- Quest Description (TEXTAREA) -->
            <label for="questDesc">Description:</label>
            <textarea id="questDesc" name="questDesc" rows="4" maxlength="500" required></textarea>

            <!-- Difficulty (RADIO buttons) -->
            <label>Difficulty:</label>
            <div class="radio-group">
                <label>
                    <input type="radio" name="difficulty" value="easy" required> Easy
                </label>
                <label>
                    <input type="radio" name="difficulty" value="medium" checked> Medium
                </label>
                <label>
                    <input type="radio" name="difficulty" value="hard"> Hard
                </label>
            </div>

            <!-- Status (SELECT dropdown) -->
            <label for="status">Status:</label>
            <select id="status" name="status">
                <option value="not_started">Not Started</option>
                <option value="in_progress">In Progress</option>
                <option value="completed">Completed</option>
            </select>

            <div class="button-group">
                <button type="submit" class="primary-btn">Create Quest</button>
                <a href="/quests" class="secondary-btn">Cancel</a>
            </div>
        </form>
    </div>
</main>

<%- include('partials/footer.ejs') %>

<script src="/js/addQuestScript.js"></script>
</body>
</html>