<%- include('partials/head.ejs') %>
<link rel="stylesheet" href="/css/reviewsHomeStyles.css">

<body>
    <main class="reviews-home">

        <!-- Stacked Navigation -->
        <div class="reviews-nav">
            <form action="/home">
                <button>Home</button>
            </form>

            <form action="/logout">
                <button>Logout</button>
            </form>
        </div>

        <!-- Page Title -->
        <h1 class="reviews-title">Recent Reviews</h1>

        <% if (reviews.length === 0) { %>
            <p>No reviews yet.</p>
        <% } else { %>
            <% reviews.forEach(r => { %>
                <div class="review-card">
                    <h3>
                        <a href="/game/<%= r.game_name %>">
                            <%= r.game_name %>
                        </a>
                    </h3>
                    <p class="rating">Rating: <%= r.rating %>/10</p>
                    <p class="text"><%= r.review_text %></p>
                    <small>by <%= r.username %> on <%= r.created_at.toLocaleString() %></small>
                </div>
            <% }) %>
        <% } %>

    </main>

    <%- include('partials/footer.ejs') %>
</body>
</html>
